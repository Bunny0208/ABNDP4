<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Black"
    tools:context=".NowPlaying">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/images"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_skip_previous_black_24dp"
            android:background="@color/Black"
            android:layout_margin="@dimen/button_margin"/>

        <ImageButton
            android:id="@+id/play_pause_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pause_black_24dp"
            android:background="@color/Black"
            android:layout_margin="@dimen/button_margin"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_skip_next_black_24dp"
            android:background="@color/Black"
            android:layout_margin="@dimen/button_margin"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_ini"
            android:textColor="@color/text"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/TIME_margin"
            android:layout_marginStart="@dimen/TIME_margin"/>
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="@dimen/seekbar_width"
        android:layout_height="wrap_content"
        android:progress="20"
        android:max="100"
        android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_fin"
            android:textColor="@color/text"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/TIME_margin"
            android:layout_marginEnd="@dimen/TIME_margin"/>
</LinearLayout>
</LinearLayout>