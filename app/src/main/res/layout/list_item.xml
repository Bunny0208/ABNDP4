<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/list_item"
    android:padding="16dp">
    <ImageView
        android:layout_width="@dimen/image_margin"
        android:layout_height="@dimen/image_margin"
        android:src="@drawable/images"
        android:scaleType="centerCrop"
        android:layout_gravity="end"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/ll_margin"
    android:layout_marginLeft="@dimen/ll_margin"
    android:orientation="vertical"
    android:layout_gravity="start">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Song_Name"
        android:textColor="@color/text"
        tools:text="Song 1"
        android:textSize="@dimen/songname"/>

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:id="@+id/Artist_Name"
        tools:text="Album 1"
        android:textSize="@dimen/artistname"/>
</LinearLayout>


</LinearLayout>
